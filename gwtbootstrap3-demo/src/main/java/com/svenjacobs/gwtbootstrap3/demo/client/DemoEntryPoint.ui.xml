<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.svenjacobs.gwtbootstrap3.client.ui">

    <ui:style>
        .buttons button {
            margin: 0.5em;
        }

        .labels span {
            margin-right: 5px;
        }
    </ui:style>

    <b:Container>

        <b:Navbar position="FIXED_TOP">
            <b:Container>
                <b:NavbarHeader>
                    <b:NavbarBrand ui:field="brand">GwtBootstrap3</b:NavbarBrand>
                    <b:NavbarCollapseButton target="#navbar-collapse"/>
                </b:NavbarHeader>
                <b:NavbarCollapse b:id="navbar-collapse">
                    <b:NavbarNav>
                        <b:ListItem text="Setup" ui:field="setupLink"/>
                        <b:ListDropDown>
                            <b:AnchorButton toggle="DROPDOWN">CSS</b:AnchorButton>
                            <b:DropDownMenu>
                                <b:ListItem ui:field="gridSystemLink">Grid System</b:ListItem>
                                <b:ListItem ui:field="typographyLink">Typography</b:ListItem>
                                <b:ListItem ui:field="codeLink">Code</b:ListItem>
                                <b:ListItem ui:field="tablesLink">Tables</b:ListItem>
                                <b:ListItem ui:field="formsLink">Forms</b:ListItem>
                                <b:ListItem ui:field="buttonsLink">Buttons</b:ListItem>
                                <b:ListItem ui:field="imagesLink">Images</b:ListItem>
                                <b:ListItem ui:field="responsiveUtilitiesLink">Responsive Utilities</b:ListItem>
                            </b:DropDownMenu>
                        </b:ListDropDown>
                        <b:ListDropDown>
                            <b:AnchorButton toggle="DROPDOWN">Components</b:AnchorButton>
                            <b:DropDownMenu>
                                <b:ListItem ui:field="alertsLink">Alerts</b:ListItem>
                                <b:ListItem ui:field="badgesLink">Badges</b:ListItem>
                                <b:ListItem ui:field="breadcrumbsLink">Breadcrumbs</b:ListItem>
                                <b:ListItem ui:field="buttonDropdownsLink">Button Dropdowns</b:ListItem>
                                <b:ListItem ui:field="buttonGroupsLink">Button Groups</b:ListItem>
                                <b:ListItem ui:field="dropdownsLink">Dropdowns</b:ListItem>
                                <b:ListItem ui:field="iconsLink">Icons</b:ListItem>
                                <b:ListItem ui:field="inputGroupsLink">Input Groups</b:ListItem>
                                <b:ListItem ui:field="jumobtronLink">Jumbotron</b:ListItem>
                                <b:ListItem ui:field="labelsLink">Labels</b:ListItem>
                                <b:ListItem ui:field="listGroupLink">List Group</b:ListItem>
                                <b:ListItem ui:field="mediaObjectsLink">Media Objects</b:ListItem>
                                <b:ListItem ui:field="navBarLink">Navbar</b:ListItem>
                                <b:ListItem ui:field="navsLink">Navs</b:ListItem>
                                <b:ListItem ui:field="pageHeaderLink">Page Header</b:ListItem>
                                <b:ListItem ui:field="paginationLink">Pagination</b:ListItem>
                                <b:ListItem ui:field="panelsLink">Panels</b:ListItem>
                                <b:ListItem ui:field="progressBarLink">Progress Bars</b:ListItem>
                                <b:ListItem ui:field="thumbnailsLink">Thumbnails</b:ListItem>
                                <b:ListItem ui:field="wellsLink">Wells</b:ListItem>
                            </b:DropDownMenu>
                        </b:ListDropDown>
                        <b:ListDropDown>
                            <b:AnchorButton toggle="DROPDOWN">JavaScript</b:AnchorButton>
                            <b:DropDownMenu>
                                <b:ListItem ui:field="affixLink">Affix</b:ListItem>
                                <b:ListItem ui:field="carouselLink">Carousel</b:ListItem>
                                <b:ListItem ui:field="collapseLink">Collapse</b:ListItem>
                                <b:ListItem ui:field="dateTimePickerLink">DateTimePicker</b:ListItem>
                                <b:ListItem ui:field="modalsLink">Modals</b:ListItem>
                                <b:ListItem ui:field="popoverLink">Popover</b:ListItem>
                                <b:ListItem ui:field="tooltipsLink">Tooltips</b:ListItem>
                                <b:ListItem ui:field="bootboxLink">Bootbox</b:ListItem>
                            </b:DropDownMenu>
                        </b:ListDropDown>
                    </b:NavbarNav>
                </b:NavbarCollapse>
            </b:Container>
        </b:Navbar>

        <!-- Container Content -->
        <b:Row ui:field="container" width="100%">
            <b:Jumbotron ui:field="jumbotron">
                <b:Heading size="1">Demo for GwtBootstrap3</b:Heading>

                <b:Paragraph>
                    A
                    <a href="http://getbootstrap.com/">Twitter Bootstrap</a>
                    wrapper for
                    <a href="http://gwtproject.org/">GWT</a>
                </b:Paragraph>

                <b:Paragraph>
                    This is the demo for GwtBootstrap3 version 0.4. For previous releases please go to:
                    <a href="https://github.com/svenjacobs/gwtbootstrap3/releases">Previous Releases</a>
                </b:Paragraph>
            </b:Jumbotron>
        </b:Row>

    </b:Container>

</ui:UiBinder>