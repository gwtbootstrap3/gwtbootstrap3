<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.svenjacobs.gwtbootstrap3.client.ui">

    <b:Row>

        <b:PageHeader text="Thumbnails"/>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="As Links"/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:Row>
                    <b:Column size="SM_6 MD_3">
                        <b:ThumbnailLink>
                            <b:Image url="images/test.png" type="THUMBNAIL"/>
                        </b:ThumbnailLink>
                    </b:Column>
                    <b:Column size="SM_6 MD_3">
                        <b:ThumbnailLink>
                            <b:Image url="images/test.png" type="THUMBNAIL"/>
                        </b:ThumbnailLink>
                    </b:Column>
                    <b:Column size="SM_6 MD_3">
                        <b:ThumbnailLink>
                            <b:Image url="images/test.png" type="THUMBNAIL"/>
                        </b:ThumbnailLink>
                    </b:Column>
                    <b:Column size="SM_6 MD_3">
                        <b:ThumbnailLink>
                            <b:Image url="images/test.png" type="THUMBNAIL"/>
                        </b:ThumbnailLink>
                    </b:Column>
                </b:Row>
            </b:PanelBody>
            <b:PanelFooter>
                <b:Pre addStyleNames="prettyprint lang-xml">
                    &lt;b:ThumbnailLink&gt;\n
                    \s\s&lt;b:Image url="..." type="..."/&gt;\n
                    &lt;/b:ThumbnailLink&gt;\n
                </b:Pre>
            </b:PanelFooter>
        </b:Panel>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="Custom Content"/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:Row>
                    <b:Column size="SM_6 MD_4">
                        <b:ThumbnailContainer>
                            <b:Image url="images/test.png" type="THUMBNAIL"/>
                            <b:Caption>
                                <b:Heading size="3" text="Heading"/>
                                <b:Paragraph text="Content here..."/>
                                <b:Button text="Button"/>
                            </b:Caption>
                        </b:ThumbnailContainer>
                    </b:Column>
                    <b:Column size="SM_6 MD_4">
                        <b:ThumbnailContainer>
                            <b:Image url="images/test.png" type="THUMBNAIL"/>
                            <b:Caption>
                                <b:Heading size="3" text="Heading"/>
                                <b:Paragraph text="Content here..."/>
                                <b:Button text="Button"/>
                            </b:Caption>
                        </b:ThumbnailContainer>
                    </b:Column>
                    <b:Column size="SM_6 MD_4">
                        <b:ThumbnailContainer>
                            <b:Image url="images/test.png" type="THUMBNAIL"/>
                            <b:Caption>
                                <b:Heading size="3" text="Heading"/>
                                <b:Paragraph text="Content here..."/>
                                <b:Button text="Button"/>
                            </b:Caption>
                        </b:ThumbnailContainer>
                    </b:Column>
                </b:Row>
            </b:PanelBody>
            <b:PanelFooter>
                <b:Pre addStyleNames="prettyprint lang-xml">
                    &lt;b:ThumbnailContainer&gt;\n
                    \s\s&lt;b:Image url="..." type="..."/&gt;\n
                    \s\s&lt;b:Caption&gt;\n
                    \s\s\s\s&lt;b:Heading size="..." text="..."/&gt;\n
                    \s\s\s\s&lt;b:Paragraph text="..."/&gt;\n
                    \s\s\s\s&lt;b:Button text="..."/&gt;\n
                    \s\s&lt;/b:Caption&gt;\n
                    &lt;/b:ThumbnailContainer&gt;\n
                </b:Pre>
            </b:PanelFooter>
        </b:Panel>

    </b:Row>

</ui:UiBinder>