<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.svenjacobs.gwtbootstrap3.client.ui">

    <b:Row>

        <b:PageHeader text="Button Groups"/>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="Basic"/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:ButtonGroup>
                    <b:Button>Button 1</b:Button>
                    <b:Button>Button 2</b:Button>
                    <b:Button>Button 3</b:Button>
                </b:ButtonGroup>
            </b:PanelBody>
            <b:PanelFooter>
                <b:Pre addStyleNames="prettyprint lang-xml">
                    &lt;b:ButtonGroup&gt;\n
                    \s\s&lt;b:Button&gt;Button 1&lt;/b:Button&gt;\n
                    \s\s&lt;b:Button&gt;Button 2&lt;/b:Button&gt;\n
                    \s\s&lt;b:Button&gt;Button 3&lt;/b:Button&gt;\n
                    &lt;/b:ButtonGroup&gt;
                </b:Pre>
            </b:PanelFooter>
        </b:Panel>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="Multiple"/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:ButtonToolBar>
                    <b:ButtonGroup>
                        <b:Button>1</b:Button>
                        <b:Button>2</b:Button>
                        <b:Button>3</b:Button>
                    </b:ButtonGroup>
                    <b:ButtonGroup>
                        <b:Button>4</b:Button>
                        <b:Button>5</b:Button>
                    </b:ButtonGroup>
                    <b:ButtonGroup>
                        <b:Button>6</b:Button>
                        <b:Button>7</b:Button>
                        <b:Button>8</b:Button>
                    </b:ButtonGroup>
                </b:ButtonToolBar>
            </b:PanelBody>
            <b:PanelFooter>
                <b:Pre addStyleNames="prettyprint lang-xml">
                    &lt;b:ButtonToolBar&gt;\n
                    \s\s&lt;b:ButtonGroup&gt;\n
                    \s\s\s\s&lt;b:Button&gt;1&lt;/b:Button&gt;\n
                    \s\s\s\s&lt;b:Button&gt;2&lt;/b:Button&gt;\n
                    \s\s\s\s&lt;b:Button&gt;3&lt;/b:Button&gt;\n
                    \s\s&lt;/b:ButtonGroup&gt;\n
                    \n
                    \s\s&lt;b:ButtonGroup&gt;\n
                    \s\s\s\s&lt;b:Button&gt;4&lt;/b:Button&gt;\n
                    \s\s\s\s&lt;b:Button&gt;5&lt;/b:Button&gt;\n
                    \s\s&lt;/b:ButtonGroup&gt;\n
                    \n
                    \s\s&lt;b:ButtonGroup&gt;\n
                    \s\s\s\s&lt;b:Button&gt;6&lt;/b:Button&gt;\n
                    \s\s\s\s&lt;b:Button&gt;7&lt;/b:Button&gt;\n
                    \s\s\s\s&lt;b:Button&gt;8&lt;/b:Button&gt;\n
                    \s\s&lt;/b:ButtonGroup&gt;\n
                    &lt;/b:ButtonToolBar&gt;
                </b:Pre>
            </b:PanelFooter>
        </b:Panel>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="Nested"/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:ButtonGroup>
                    <b:Button>1</b:Button>
                    <b:Button>2</b:Button>
                    <b:ButtonGroup>
                        <b:Button toggle="DROPDOWN">Dropdown</b:Button>
                        <b:DropDownMenu>
                            <b:ListItem>3</b:ListItem>
                            <b:ListItem>4</b:ListItem>
                        </b:DropDownMenu>
                    </b:ButtonGroup>
                </b:ButtonGroup>
            </b:PanelBody>
            <b:PanelFooter>
                <b:Pre addStyleNames="prettyprint lang-xml">
                    &lt;b:ButtonGroup&gt;\n
                    \s\s&lt;b:Button&gt;1&lt;/b:Button&gt;\n
                    \s\s&lt;b:Button&gt;2&lt;/b:Button&gt;\n
                    \s\s&lt;b:ButtonGroup&gt;\n
                    \s\s\s\s&lt;b:Button toggle="DROPDOWN"&gt;Dropdown&lt;/b:Button&gt;\n
                    \s\s\s\s&lt;b:DropDownMenu&gt;\n
                    \s\s\s\s\s\s&lt;b:ListItem&gt;3&lt;/b:ListItem&gt;\n
                    \s\s\s\s\s\s&lt;b:ListItem&gt;4&lt;/b:ListItem&gt;\n
                    \s\s\s\s&lt;/b:DropDownMenu&gt;\n
                    \s\s&lt;/b:ButtonGroup&gt;\n
                    &lt;/b:ButtonGroup&gt;
                </b:Pre>
            </b:PanelFooter>
        </b:Panel>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="Vertical"/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:VerticalButtonGroup>
                    <b:Button>1</b:Button>
                    <b:Button>2</b:Button>
                    <b:Button>3</b:Button>
                    <b:Button>4</b:Button>
                </b:VerticalButtonGroup>
            </b:PanelBody>
            <b:PanelFooter>
                <b:Pre addStyleNames="prettyprint lang-xml">
                    &lt;b:VerticalButtonGroup&gt;\n
                    \s\s&lt;b:Button&gt;1&lt;/b:Button&gt;\n
                    \s\s&lt;b:Button&gt;2&lt;/b:Button&gt;\n
                    \s\s&lt;b:Button&gt;3&lt;/b:Button&gt;\n
                    \s\s&lt;b:Button&gt;4&lt;/b:Button&gt;\n
                    &lt;/b:VerticalButtonGroup&gt;
                </b:Pre>
            </b:PanelFooter>
        </b:Panel>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="Justified"/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:ButtonGroup justified="true">
                    <b:AnchorButton>Button 1</b:AnchorButton>
                    <b:AnchorButton>Button 2</b:AnchorButton>
                    <b:AnchorButton>Button 3</b:AnchorButton>
                </b:ButtonGroup>
            </b:PanelBody>
            <b:PanelFooter>
                <b:Pre addStyleNames="prettyprint lang-xml">
                    &lt;b:ButtonGroup justified="true"&gt;\n
                    \s\s&lt;b:AnchorButton&gt;Button 1&lt;/b:AnchorButton&gt;\n
                    \s\s&lt;b:AnchorButton&gt;Button 2&lt;/b:AnchorButton&gt;\n
                    \s\s&lt;b:AnchorButton&gt;Button 3&lt;/b:AnchorButton&gt;\n
                    &lt;/b:ButtonGroup&gt;
                </b:Pre>
            </b:PanelFooter>
        </b:Panel>

    </b:Row>

</ui:UiBinder>