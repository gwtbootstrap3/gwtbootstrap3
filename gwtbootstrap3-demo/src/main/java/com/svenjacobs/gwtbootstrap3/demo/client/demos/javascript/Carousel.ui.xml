<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.svenjacobs.gwtbootstrap3.client.ui">

    <ui:style>
        .danger {
            background-color: #fcf2f2;
            border-color: #dFb5b4;
        }

        .margin-fix {
            margin-top: 0 !important;
        }
    </ui:style>

    <b:Row>

        <b:PageHeader text="Carousel"/>

        <b:BlockQuote addStyleNames="{style.danger}">
            <b:Heading addStyleNames="{style.margin-fix}" size="4" text="Cross-browser compatibility"/>
            <b:Paragraph>
                <b>Transition animations not supported in Internet Explorer 8 &amp; 9</b>
                <br/>
                Bootstrap exclusively uses CSS3 for its animations, but Internet Explorer 8 &amp; 9 don't support the
                necessary CSS properties. Thus, there are no slide transition animations when using these browsers. We
                have intentionally decided not to include jQuery-based fallbacks for the transitions.
            </b:Paragraph>
        </b:BlockQuote>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="Basic"/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:Carousel b:id="carousel-basic">
                    <b:CarouselIndicators>
                        <b:CarouselIndicator dataTarget="#carousel-basic" dataSlideTo="0" active="true"/>
                        <b:CarouselIndicator dataTarget="#carousel-basic" dataSlideTo="1"/>
                        <b:CarouselIndicator dataTarget="#carousel-basic" dataSlideTo="2"/>
                    </b:CarouselIndicators>
                    <b:CarouselInner>
                        <b:CarouselSlide active="true">
                            <b:Image width="100%" url="images/carousel1.png"/>
                        </b:CarouselSlide>
                        <b:CarouselSlide>
                            <b:Image width="100%" url="images/carousel2.png"/>
                        </b:CarouselSlide>
                        <b:CarouselSlide>
                            <b:Image width="100%" url="images/carousel3.png"/>
                        </b:CarouselSlide>
                    </b:CarouselInner>
                    <b:CarouselControl href="#carousel-basic" prev="true" iconType="CHEVRON_CIRCLE_LEFT"/>
                    <b:CarouselControl href="#carousel-basic" next="true" iconType="CHEVRON_CIRCLE_RIGHT"/>
                </b:Carousel>
            </b:PanelBody>
            <b:PanelFooter>
                <b:Pre addStyleNames="prettyprint lang-xml">
                    &lt;b:Carousel b:id="carousel-basic"/&gt;\n
                    \s\s&lt;b:CarouselIndicators&gt;\n
                    \s\s\s\s&lt;b:CarouselIndicator dataTarget="#carousel-basic" dataSlideTo="0" active="true"/&gt;\n
                    \s\s\s\s&lt;b:CarouselIndicator dataTarget="#carousel-basic" dataSlideTo="1"/&gt;\n
                    \s\s\s\s&lt;b:CarouselIndicator dataTarget="#carousel-basic" dataSlideTo="2"/&gt;\n
                    \s\s&lt;/b:CarouselIndicators&gt;\n
                    \s\s&lt;b:CarouselInner&gt;\n
                    \s\s\s\s&lt;b:CarouselSlide/&gt;\n
                    \s\s\s\s\s\s&lt;b:Image url=".../&gt;\n
                    \s\s\s\s&lt;/b:CarouselSlide&gt;\n
                    \s\s&lt;/b:CarouselInner&gt;\n
                    \s\s&lt;b:CarouselControl href="#carousel-basic" prev="true" iconType="..."/&gt;\n
                    \s\s&lt;b:CarouselControl href="#carousel-basic" next="true" iconType="..."/&gt;\n
                    &lt;/b:Carousel/&gt;\n
                </b:Pre>
            </b:PanelFooter>
        </b:Panel>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="With Captions"/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:Carousel b:id="carousel-captions">
                    <b:CarouselIndicators>
                        <b:CarouselIndicator dataTarget="#carousel-captions" dataSlideTo="0" active="true"/>
                        <b:CarouselIndicator dataTarget="#carousel-captions" dataSlideTo="1"/>
                        <b:CarouselIndicator dataTarget="#carousel-captions" dataSlideTo="2"/>
                    </b:CarouselIndicators>
                    <b:CarouselInner>
                        <b:CarouselSlide active="true">
                            <b:Image width="100%" url="images/carousel1.png"/>
                            <b:CarouselCaption>
                                <b:Heading size="3" text="Slide 1"/>
                                <b:Paragraph text="Caption!"/>
                            </b:CarouselCaption>
                        </b:CarouselSlide>
                        <b:CarouselSlide>
                            <b:Image width="100%" url="images/carousel2.png"/>
                            <b:CarouselCaption>
                                <b:Heading size="3" text="Slide 2"/>
                                <b:Paragraph text="Caption!"/>
                            </b:CarouselCaption>
                        </b:CarouselSlide>
                        <b:CarouselSlide>
                            <b:Image width="100%" url="images/carousel3.png"/>
                            <b:CarouselCaption>
                                <b:Heading size="3" text="Slide 3"/>
                                <b:Paragraph text="Caption!"/>
                            </b:CarouselCaption>
                        </b:CarouselSlide>
                    </b:CarouselInner>
                    <b:CarouselControl href="#carousel-captions" prev="true" iconType="CHEVRON_CIRCLE_LEFT"/>
                    <b:CarouselControl href="#carousel-captions" next="true" iconType="CHEVRON_CIRCLE_RIGHT"/>
                </b:Carousel>
            </b:PanelBody>
            <b:PanelFooter>
                <b:Pre addStyleNames="prettyprint lang-xml">
                    &lt;b:Carousel b:id="carousel-captions"/&gt;\n
                    \s\s&lt;b:CarouselIndicators&gt;\n
                    \s\s\s\s&lt;b:CarouselIndicator dataTarget="#carousel-captions" dataSlideTo="0" active="true"/&gt;\n
                    \s\s\s\s&lt;b:CarouselIndicator dataTarget="#carousel-captions" dataSlideTo="1"/&gt;\n
                    \s\s\s\s&lt;b:CarouselIndicator dataTarget="#carousel-captions" dataSlideTo="2"/&gt;\n
                    \s\s&lt;/b:CarouselIndicators&gt;\n
                    \s\s&lt;b:CarouselInner&gt;\n
                    \s\s\s\s&lt;b:CarouselSlide/&gt;\n
                    \s\s\s\s\s\s&lt;b:Image url=".../&gt;\n
                    \s\s\s\s\s\s&lt;b:CarouselCaption&gt;\n
                    \s\s\s\s\s\s\s\s&lt;b:Heading size="..." text="..."/&gt;\n
                    \s\s\s\s\s\s\s\s&lt;b:Paragraph text="..."/&gt;\n
                    \s\s\s\s\s\s&lt;/b:CarouselCaption&gt;\n
                    \s\s\s\s&lt;/b:CarouselSlide&gt;\n
                    \s\s&lt;/b:CarouselInner&gt;\n
                    \s\s&lt;b:CarouselControl href="#carousel-captions" prev="true" iconType="..."/&gt;\n
                    \s\s&lt;b:CarouselControl href="#carousel-captions" next="true" iconType="..."/&gt;\n
                    &lt;/b:Carousel/&gt;\n
                </b:Pre>
            </b:PanelFooter>
        </b:Panel>

    </b:Row>

</ui:UiBinder>