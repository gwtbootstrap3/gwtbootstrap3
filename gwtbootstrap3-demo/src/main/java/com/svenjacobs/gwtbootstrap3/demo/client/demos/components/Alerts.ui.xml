<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.svenjacobs.gwtbootstrap3.client.ui">

    <ui:style>
        .margin-fix {
            margin-bottom: 0 !important;
        }
    </ui:style>
    <b:Row>

        <b:PageHeader text="Alerts"/>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="Basic"/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:Alert type="SUCCESS">
                    <strong>Title</strong>
                    Description
                </b:Alert>
                <b:Alert type="INFO">
                    <strong>Title</strong>
                    Description
                </b:Alert>
                <b:Alert type="WARNING">
                    <strong>Title</strong>
                    Description
                </b:Alert>
                <b:Alert addStyleNames="{style.margin-fix}" type="DANGER">
                    <strong>Title</strong>
                    Description
                </b:Alert>
            </b:PanelBody>
            <b:PanelFooter>
                <b:Pre addStyleNames="prettyprint lang-xml">
                    &lt;b:Alert type="SUCCESS&gt;\n
                    \s\s&lt;strong&gt;Title&lt;/strong&gt;\n
                    \s\sDescription\n
                    &lt;/b:Alert&gt;\n
                    \n
                    &lt;b:Alert type="INFO&gt;\n
                    \s\s&lt;strong&gt;Title&lt;/strong&gt;\n
                    \s\sDescription\n
                    &lt;/b:Alert&gt;\n
                    \n
                    &lt;b:Alert type="WARNING&gt;\n
                    \s\s&lt;strong&gt;Title&lt;/strong&gt;\n
                    \s\sDescription\n
                    &lt;/b:Alert&gt;\n
                    \n
                    &lt;b:Alert type="DANGER&gt;\n
                    \s\s&lt;strong&gt;Title&lt;/strong&gt;\n
                    \s\sDescription\n
                    &lt;/b:Alert&gt;\n
                </b:Pre>
            </b:PanelFooter>
        </b:Panel>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="Dismissable"/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:Alert addStyleNames="{style.margin-fix}" type="SUCCESS" dismissable="true">
                    <strong>Title</strong>
                    Description
                </b:Alert>
            </b:PanelBody>
            <b:PanelFooter>
                <b:Pre addStyleNames="prettyprint lang-xml">
                    &lt;b:Alert type="SUCCESS dismissable="true"&gt;\n
                    \s\s&lt;strong&gt;Title&lt;/strong&gt;\n
                    \s\sDescription\n
                    &lt;/b:Alert&gt;\n
                </b:Pre>
            </b:PanelFooter>
        </b:Panel>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="Links Inside"/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:Alert addStyleNames="{style.margin-fix}" type="SUCCESS" dismissable="true">
                    <strong>Title</strong>
                    Description
                    <b:AlertLink>Link</b:AlertLink>
                </b:Alert>
            </b:PanelBody>
            <b:PanelFooter>
                <b:Pre addStyleNames="prettyprint lang-xml">
                    &lt;b:Alert type="SUCCESS dismissable="true"&gt;\n
                    \s\s&lt;strong&gt;Title&lt;/strong&gt;\n
                    \s\sDescription\n
                    \s\s&lt;b:AlertLink&gt;Link&lt;/AlertLink&gt;\n
                    &lt;/b:Alert&gt;\n
                </b:Pre>
            </b:PanelFooter>
        </b:Panel>

    </b:Row>

</ui:UiBinder>